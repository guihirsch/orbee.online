# Configurações da API Backend
VITE_API_BASE_URL=http://localhost:8000

# Mapbox Configuration
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Sentinel Hub Configuration (opcional - usado pelo backend)
VITE_SENTINEL_HUB_CLIENT_ID=your_sentinel_hub_client_id
VITE_SENTINEL_HUB_CLIENT_SECRET=your_sentinel_hub_client_secret

# Ambiente
VITE_NODE_ENV=development

# Configurações de Debug
VITE_DEBUG_MODE=true
VITE_MOCK_DATA=false
VITE_USE_STATIC_DATA=true

# URLs de Serviços Externos
VITE_COPERNICUS_API_URL=https://services.sentinel-hub.com

# Configurações de Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Configurações de Localização (Santa Cruz do Sul)
VITE_DEFAULT_LATITUDE=-29.7175
VITE_DEFAULT_LONGITUDE=-52.4264
VITE_DEFAULT_ZOOM=13
VITE_DEFAULT_CITY=santa_cruz_do_sul

# Configurações de Cache
VITE_CACHE_DURATION=300000

# Analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Configurações de Notificação
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000